{
	"name": "Go",
	"service": "app",
	"workspaceFolder": "/app",
	"shutdownAction": "stopCompose",
	"dockerComposeFile": [
        "../docker-compose.yaml"
    ],
	"customizations": {
		"vscode": {
			"settings": {
				"go.toolsManagement.checkForUpdates": "local",
				"go.useLanguageServer": true,
				"go.gopath": "/go",
				"go.goroot": "/usr/local/go"
			},
			"extensions": [
				"golang.Go"
			]
		}
	}
}
